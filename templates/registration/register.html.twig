{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}


{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
<div class="row mb-5">
<div class="col-12">
    <h1>Inscription</h1>
</div>
</div>
<div class="row justify-content-center  d-grid">
    {{ form_errors(registrationForm) }}
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email, {'attr': {'class': 'col-12'}}) }}
        {{ form_row(registrationForm.plainPassword,{'attr': {'class': 'col-12'}},{label:'Mot de passe'})}} 
        {{ form_row(registrationForm.nom,{'attr': {'class': 'col-12'}})}}
        {{ form_row(registrationForm.prenom, {'attr': {'class': 'col-12'}})}}
        {{ form_row(registrationForm.cp,{'attr': {'class': 'col-12'}},{label:'Code postal'})}} 
        {{ form_row(registrationForm.telephone, {'attr': {'class': 'col-12'}}) }}
        {{ form_row(registrationForm.adresse,{'attr': {'class': 'col-12'}})}}
        {{ form_row(registrationForm.ville,{'attr': {'class': 'col-12'}})}}
        {{ form_row(registrationForm.agreeTerms, {label: 'J\'accepte les conditions'}) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}

</div>
{% endblock %}
  {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.2/dist/morph/bootstrap.min.css">
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.2/dist/morph/_variables.scss">
             <link rel="stylesheet" href="/style.css">
              <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

  {% endblock %}

      